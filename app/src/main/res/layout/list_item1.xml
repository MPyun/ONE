<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="left|center"
	android:paddingTop="12dp"
	android:paddingLeft="16dp"
	android:paddingRight="16dp">

	<ImageView
		android:id="@+id/listitem1ImageView1"
		android:background="@drawable/img_round_corner"
		android:clipToOutline="true"
		android:layout_height="50dp"
		android:layout_width="50dp"
		android:scaleType="centerCrop"
		android:src="@drawable/img1"
		android:layout_marginRight="12dp"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="24dp"
		android:text="大胖"
		android:layout_toRightOf="@id/listitem1ImageView1"
		android:maxLines="1"
		android:textSize="16sp"
		android:id="@+id/listitem1TextView1"
		android:ellipsize="end"
		android:layout_marginBottom="4dp"
		android:textColor="#FF000000"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="20dp"
		android:text="该消息提醒"
		android:layout_toRightOf="@id/listitem1ImageView1"
		android:layout_below="@id/listitem1TextView1"
		android:textColor="#FF888888"
		android:id="@+id/listitem1TextView2"
		android:layout_marginBottom="12dp"/>

	<View
		android:background="?android:attr/dividerVertical"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_below="@id/listitem1TextView2"
		android:layout_toRightOf="@id/listitem1ImageView1"/>

</RelativeLayout>

